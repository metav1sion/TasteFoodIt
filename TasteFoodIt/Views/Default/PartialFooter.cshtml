                    <h2 class="ftco-heading-2">Açık Gün ve Saatlerimiz</h2>
                    <ul class="list-unstyled open-hours">
                        @foreach (var item in Model)
                        {
                            <li class="d-flex"><span>@item.DayName</span><span>@item.OpenHourRange</span></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2">Instagram</h2>
                    <div class="thumb d-sm-flex">
                        <a href="#" class="thumb-menu img" style="background-image: url(/Templates/tasteit-master/images/insta-1.jpg);">
