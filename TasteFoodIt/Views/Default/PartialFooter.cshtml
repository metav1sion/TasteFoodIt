@model List<TasteFoodIt.Entities.OpenDayHour>
<footer id="footer" class="ftco-footer ftco-no-pb ftco-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-6 col-lg-4">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2">Taste.it</h2>
                    <p>Çok uzakta, dağların arkasında, Vokalia ve Consonantia ülkelerinden çok uzakta, kör metinler yaşıyor. Bookmarksgrove'da ayrı yaşıyorlar</p>
                    <ul class="ftco-footer-social list-unstyled float-md-left float-lft mt-3">
                        <li class="ftco-animate"><a href="#"><span class="fa fa-twitter"></span></a></li>
                        <li class="ftco-animate"><a href="#"><span class="fa fa-facebook"></span></a></li>
                        <li class="ftco-animate"><a href="#"><span class="fa fa-instagram"></span></a></li>
                    </ul>
                </div>
            </div>
