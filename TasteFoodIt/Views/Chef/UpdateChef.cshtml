@model TasteFoodIt.Entities.Chef
@{
    ViewBag.Title = "UpdateChef";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Şef Ekleme Syfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Şefler</li>
            <li class="breadcrumb-item active" aria-current="page">Şef İşlemleri</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Şef Ekleme Paneli</h6>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label>Referans ID</label>
                            @Html.TextBoxFor(x => x.ChefId, new { @class = "form-control", @readonly = "readonly" })
                            <br />
                            <label for="exampleInputCategory">Şef Adı</label>
                            @Html.TextBoxFor(Model => Model.NameSurname, new { @class = "form form-control" })
                            <br />
                            <label for="exampleInputCategory">Şef Title</label>
                            @Html.TextBoxFor(Model => Model.Title, new { @class = "form form-control" })
                            <br />
                            <label>Mevcut Görsel</label>
                            <br />
                            <img style="width: 30%; height: 30%;" src="@Model.ImageUrl" alt="@Model.ImageUrl" class="img-thumbnail">
                            <br />
                            <div class="mb-3">
                                <label>Şef Görseli Değiştirme</label>
                                <input class="form-control" type="file" name="file" id="formFileMultiple">
                            </div>
                            <br />
                            <label for="exampleInputCategory">Şef Açıklaması</label>
                            @Html.TextBoxFor(Model => Model.Description, new { @class = "form form-control" })
                            <br />
                        </div>
                        <button type="submit" class="btn btn-primary">Şefi Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



