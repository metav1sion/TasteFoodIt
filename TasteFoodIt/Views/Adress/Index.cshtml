@model TasteFoodIt.Entities.Adress
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Adres Ekleme Syfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a Adres="./">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Slider</li>
            <li class="breadcrumb-item active" aria-current="page">Adres İşlemleri</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Adres Ekleme Paneli</h6>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.AdressId)
                            <br />
                            <label for="exampleInputCategory">Telefon Numarası</label>
                            @Html.TextBoxFor(Model => Model.Phone, new { @class = "form form-control" })
                            <br />
                            <label for="exampleInputCategory">Email</label>
                            @Html.TextBoxFor(Model => Model.Email, new { @class = "form form-control" })
                            <br />
                            <label for="exampleInputCategory">Açıklama</label>
                            @Html.TextBoxFor(Model => Model.Description, new { @class = "form form-control" })
                            <br />
                        </div>
                        <button type="submit" class="btn btn-primary">Adres Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

