@model TasteFoodIt.Entities.OpenDayHour
@{
    ViewBag.Title = "UpdateOpenDayHour";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Çalışma Saatleri Sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="../Category/">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Çalışma Saatleri</li>
            <li class="breadcrumb-item active" aria-current="page">Çalışma Saatleri İşlemleri</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Şef Ekleme Paneli</h6>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label>Çalışma Saatleri ID</label>
                            @Html.TextBoxFor(x => x.OpenDayHourId, new { @class = "form-control", @readonly = "readonly" })
                            <br />
                            <label for="exampleInputCategory">Gün</label>
                            @Html.TextBoxFor(Model => Model.DayName, new { @class = "form form-control", @readonly = "readonly" })
                            <br />
                            <label for="exampleInputCategory">Çalışma Saatleri</label>
                            @Html.TextBoxFor(Model => Model.OpenHourRange, new { @class = "form form-control" })
                            <br />
                        </div>
                        <button type="submit" class="btn btn-primary">Çalışma Saati Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

