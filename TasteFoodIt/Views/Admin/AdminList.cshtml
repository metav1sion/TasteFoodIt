@model List<TasteFoodIt.Entities.Admin>
@{
    ViewBag.Title = "AdminList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Kullanıcılar Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Kullanıcılar</li>
            <li class="breadcrumb-item active" aria-current="page">Kullanıcılar İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Simple Tables</h6>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Kullanıcı ID</th>
                                <th>Kullanıcı Adı</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><a href="#">@item.AdminId</a></td>
                                    <td>@item.Username</td>
                                    <td><a href="/Admin/DeleteAdmin/@item.AdminId" class="btn btn-danger btn-sm">Sil</a></td>
                                    <td><a href="/Admin/UpdateAdmin/@item.AdminId" class="btn btn-success btn-sm">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/AddAdmin" class="btn btn-sm btn-primary ml-2 mt-2">Yeni Kullanıcı Girişi</a>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
</div>


