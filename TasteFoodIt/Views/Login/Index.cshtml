
@{
    Layout = null;
}

@*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@
<!doctype html>
<html lang="en">
<head>
    <title>Giriş</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Templates/login-form-15/css/style.css">

</head>


<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">HOŞ GELDİNİZ</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="wrap">
                        <div class="img" style="background-image: url(/Templates/login-form-15/images/bg-1.jpg);"></div>
                        <div class="login-wrap p-4 p-md-5">
                            <div class="d-flex">
                                <div class="w-100">
                                    <h3 class="mb-4">Giris Yapınız</h3>
                                </div>
                            </div>
                            <form method="post" class="signin-form">
                                <div class="form-group mt-3">
                                    <input name="Username" type="text" class="form-control" required>
                                    <label class="form-control-placeholder" for="username">Kullanıcı Adınız</label>
                                </div>
                                <div class="form-group">
                                    <input name="Password" id="password-field" type="password" class="form-control" required>
                                    <label class="form-control-placeholder" for="password">Şifreniz</label>
                                    <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary rounded submit px-3">Giriş Yap</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Templates/login-form-15/js/jquery.min.js"></script>
    <script src="~/Templates/login-form-15/js/popper.js"></script>
    <script src="~/Templates/login-form-15/js/bootstrap.min.js"></script>
    <script src="~/Templates/login-form-15/js/main.js"></script>

</body>
</html>